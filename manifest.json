{
    "manifest_version": 3,
    "name": "MeterSphere",
    "description": "MeterSphere Recorder",
    "version": "2.0.0",
    "homepage_url": "https://www.metersphere.io",
    "action": {
        "default_icon": "icon/favicon.png",
        "default_popup": "main.html",
        "default_title": "MeterSphere"
    },
    "icons": {
        "16": "icon/favicon-16.png",
        "48": "icon/favicon.png",
        "128": "icon/favicon-128.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "content_scripts": [
        {
            "all_frames": false,
            "js": [
                "common/browser-polyfill.js",
                "jquery/jquery-3.4.1.min.js",
                "jquery/jquery-ui.min.js",
                "js/content-script.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "webRequest",
        "declarativeNetRequest",
        "contextMenus",
        "downloads",
        "webNavigation",
        "notifications",
        "storage",
        "unlimitedStorage",
        "browsingData"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "html/transaction-ui.html",
                "html/transaction-controls.html"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ]
}